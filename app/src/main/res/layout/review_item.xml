<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/loading_view_padding">

    <android.support.v7.widget.AppCompatTextView
        android:id="@id/author"
        fontPath="fonts/source_bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/review_author"
        android:textSize="@dimen/author_txt_size"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@id/content"
        fontPath="fonts/source_code_light.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin"
        android:contentDescription="@string/review_content"
        android:paddingLeft="@dimen/content_padding"
        android:textSize="@dimen/content_txt_size" />

</LinearLayout>